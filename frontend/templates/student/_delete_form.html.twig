<form id="deleteForm_{{ student.getId }}" method="post" action="{{ path('app_student_delete', {'id': student.getId}) }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ student.id) }}">
    <button type="button" class="dropdown-item remove-item-btn" onclick="confirmDelete('{{ student.getId }}')">
        <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
    </button>
</form>