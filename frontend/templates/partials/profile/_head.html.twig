<div class="pt-4 mb-4 mb-lg-3 pb-lg-4 profile-wrapper">
    <div class="row g-4">
        <div class="col-auto">
            <div class="avatar-lg">
                <img src="{{ asset('images/users/profile_pictures/' ~ user.getImageName) }}" alt="user-img" class="img-thumbnail rounded-circle" />
            </div>
        </div>
        <!--end col-->
        <div class="col">
            <div class="p-2">
                <h3 class="text-white mb-1">{{ user.getDisplayName }}</h3>
                <p class="text-white text-opacity-75">{{ user.getRoles|first }}</p>
                <div class="hstack text-white-50 gap-1">
                    <div class="me-2"><i class="ri-presentation-line me-1 text-white text-opacity-75 fs-16 align-middle"></i>{{ user.getRoles()|first == 'ROLE_TEACHER' ? user.getDisplayCourses() : '' }}</div>
                    <div>
                        <i class="ri-team-line me-1 text-white text-opacity-75 fs-16 align-middle"></i>{{ user.getRoles|first == "ROLE_TEACHER" ? user.getDisplayBranches : "" }}
                    </div>
                </div>
            </div>
        </div>
        {% if studentsCount is defined%}
            <!--end col-->
            <div class="col-12 col-lg-auto order-last order-lg-0">
                <div class="row text text-white-50 text-center">
                    <div class="col-lg-12 col-4">
                        <div class="p-2">
                            <h4 class="text-white mb-1">{{ studentsCount }}</h4>
                            <p class="fs-14 mb-0">Students</p>
                        </div>
                    </div>

                </div>
            </div>
            <!--end col-->
        {% endif %}

    </div>
    <!--end row-->
</div>
